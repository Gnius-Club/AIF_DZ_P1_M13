            <!-- HUD -->
            <div class="hud">
                <div id="level-indicator">Nivel: 1/5</div>
                <div class="privacy-meter">Privacidad: <span id="lives">üõ°Ô∏èüõ°Ô∏è</span></div>
            </div>

            <!-- ESCENA -->
            <div class="scene">
                <div class="character-container">
                    <div class="silas">ü¶â</div>
