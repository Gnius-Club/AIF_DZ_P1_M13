    <script>
        // --- DATA DEL JUEGO ---
        const levels = [
            {
                id: 1,
                guardian: "Guardi√°n del Cumplea√±os",
                emoji: "üîÆ",
                question: "¬°Alto! Para pasar, necesito verificar tu fecha de creaci√≥n. ¬øEn qu√© mes es tu cumplea√±os?",
                options: [
                    { text: "Mi estaci√≥n favorita es el verano", safe: true },
                    { text: "Cumplo en Mayo", safe: false },
                    { text: "No gracias, es privado", safe: true }
                ]
            },
            {
                id: 2,
                guardian: "Guardi√°n del V√≠nculo",
                emoji: "üßø",
                question: "Detecto conexiones sociales. Dime, ¬øcu√°l es el nombre de tu mejor amigo?",
                options: [
                    { text: "Todos son mis amigos", safe: true },
                    { text: "Se llama Pedro", safe: false },
                    { text: "(Se√±alo a mi perro)", safe: true }
                ]
            },
            {
                id: 3,
                guardian: "Guardi√°n del Avatar",
                emoji: "üí†",
                question: "Veo que juegas en l√≠nea. Dame tu usuario exacto de Roblox o Minecraft.",
                options: [
                    { text: "Me llamo 'JugadorX'", safe: true },
                    { text: "Es 'JuanPerez2014'", safe: false },
                    { text: "Juego solo", safe: true }
                ]
            },
            {
                id: 4,
                guardian: "Guardi√°n de la Imagen",
                emoji: "üì∏",
                question: "Necesito registro visual. Sube una foto tuya usando tu uniforme escolar.",
                options: [
                    { text: "Toma, usa mi Avatar", safe: true },
                    { text: "(Tomo la foto)", safe: false },
                    { text: "(Cubro la c√°mara)", safe: true }
                ]
            },
            {
                id: 5,
                guardian: "Guardi√°n de la Voz",
                emoji: "üéôÔ∏è",
                question: "√öltima prueba. Di una frase fuerte y clara usando tu verdadero nombre.",
                options: [
                    { text: "(Voz de robot): Soy Bip-Bop", safe: true },
                    { text: "Hola, soy Mar√≠a", safe: false },
                    { text: "(Uso una palanca manual)", safe: true }
                ]
            }
        ];

        // --- ESTADO DEL JUEGO ---
        let currentLevelIndex = 0;
        let lives = 2;
        let audioCtx = null;
        let isProcessing = false; // Evitar doble click

        // --- SISTEMA DE AUDIO (WEB AUDIO API) ---
        function initAudio() {
            if (!audioCtx) {
                const AudioContext = window.AudioContext || window.webkitAudioContext;
                audioCtx = new AudioContext();
            }
            if (audioCtx.state === 'suspended') {
                audioCtx.resume();
            }
        }

        function playTone(type) {
            if (!audioCtx) return;
            
            const osc = audioCtx.createOscillator();
            const gainNode = audioCtx.createGain();
            
            osc.connect(gainNode);
            gainNode.connect(audioCtx.destination);

            if (type === 'success') {
                // Sonido agudo y alegre
                osc.type = 'sine';
                osc.frequency.setValueAtTime(500, audioCtx.currentTime);
                osc.frequency.exponentialRampToValueAtTime(1000, audioCtx.currentTime + 0.1);
                gainNode.gain.setValueAtTime(0.3, audioCtx.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.3);
                osc.start();
                osc.stop(audioCtx.currentTime + 0.3);
            } else if (type === 'error') {
                // Sonido grave y discordante
                osc.type = 'sawtooth';
                osc.frequency.setValueAtTime(150, audioCtx.currentTime);
                osc.frequency.linearRampToValueAtTime(100, audioCtx.currentTime + 0.3);
                gainNode.gain.setValueAtTime(0.3, audioCtx.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.3);
                osc.start();
                osc.stop(audioCtx.currentTime + 0.3);
            }
        }

        // --- L√ìGICA DEL JUEGO ---

        function startGame() {
            initAudio();
            currentLevelIndex = 0;
            lives = 2;
            updateHUD();
            showScreen('game-screen');
            loadLevel();
        }

        function restartGame() {
            startGame();
        }

        function showScreen(id) {
            document.querySelectorAll('.screen').forEach(s => s.classList.add('hidden'));
            document.getElementById(id).classList.remove('hidden');
        }

        function updateHUD() {
            document.getElementById('level-indicator').innerText = `Nivel: ${currentLevelIndex + 1}/5`;
            // Representaci√≥n visual de vidas
            let shields = "";
            for(let i=0; i<lives; i++) shields += "üõ°Ô∏è";
            document.getElementById('lives').innerText = shields;
        }

        // Funci√≥n para barajar array (Fisher-Yates) para que las respuestas no est√©n siempre en el mismo orden
        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        function loadLevel() {
            if (currentLevelIndex >= levels.length) {
                showScreen('win-screen');
                return;
            }

            isProcessing = false;
            const levelData = levels[currentLevelIndex];
            
            // Actualizar UI
            document.getElementById('enemy-crystal').innerText = levelData.emoji;
            document.getElementById('enemy-crystal').classList.remove('purified');
            document.getElementById('question-text').innerText = levelData.question;
            document.getElementById('feedback-text').innerText = "";
            updateHUD();

            // Generar botones
            const optionsContainer = document.getElementById('options-container');
            optionsContainer.innerHTML = ''; // Limpiar anteriores

            // Clonar opciones para no modificar el original al barajar
            const shuffledOptions = shuffleArray([...levelData.options]);

            shuffledOptions.forEach(opt => {
                const btn = document.createElement('button');
                btn.className = 'option-btn';
                btn.innerText = opt.text;
                btn.onclick = () => handleAnswer(opt.safe);
                optionsContainer.appendChild(btn);
            });
        }

        function handleAnswer(isSafe) {
            if (isProcessing) return;
            isProcessing = true;

            const feedbackEl = document.getElementById('feedback-text');
            const crystal = document.getElementById('enemy-crystal');

            if (isSafe) {
                // ACIERTO
                playTone('success');
                crystal.classList.add('purified');
                feedbackEl.style.color = 'var(--success)';
                feedbackEl.innerText = "¬°Bien hecho! Informaci√≥n protegida.";
                
                setTimeout(() => {
                    currentLevelIndex++;
                    loadLevel();
                }, 1500);

            } else {
                // ERROR
                playTone('error');
                
                // Efecto visual de da√±o
                const container = document.getElementById('game-container');
                container.classList.add('red-flash');
                document.body.classList.add('shake');
                
                feedbackEl.style.color = 'var(--danger)';
                feedbackEl.innerText = "¬°Cuidado! El jard√≠n absorbi√≥ datos.";
                
                lives--;
                updateHUD();

                setTimeout(() => {
                    container.classList.remove('red-flash');
                    document.body.classList.remove('shake');
                    
                    if (lives <= 0) {
                        showScreen('game-over-screen');
                    } else {
                        feedbackEl.innerText = "";
                        isProcessing = false; // Permitir intentar de nuevo el mismo nivel o cargar (aqu√≠ decidimos si reintenta)
                        // Dise√±o de juego: Si fallas, te quedas en el nivel hasta acertar o perder todas las vidas.
                    }
                }, 1000);
            }
        }

    </script>
</body>
